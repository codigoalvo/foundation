	<repositories>
		<repository>
			<id>java.net</id>
			<name>Java.net repository</name>
			<url>http://download.java.net/maven/2/</url>
		</repository>
		<repository>
			<id>jboss</id>
			<name>jboss repo</name>
			<url>http://repository.jboss.org/nexus/content/groups/public/</url>
		</repository>
		<repository>
			<id>fusesource-snapshots</id>
			<name>Fusesource Snapshots</name>
			<url>http://repo.fusesource.com/nexus/content/repositories/public</url>
		</repository>
		<repository>
			<id>brazoft-releases</id>
			<name>Brazoft releases</name>
			<url>https://nexus-brazoft.rhcloud.com/nexus/content/groups/public/</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>deployment</id>
